{
    "dataset_reader" : {
        "type": "tsv-reader"
        },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "model": {
        "type": "simple_classifier",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 64
                }
            }
        },
        "encoder": {
            "type": "gru",
            "input_size": 64,
            "hidden_size": 128,
            "num_layers": 1
        }
    },
    "data_loader": {
        "batch_size": 32,
        "shuffle": true
    },
    "trainer": {
        "optimizer": "adam",
        "num_epochs": 100,
        "patience": 10,
        "cuda_device": -1
    }
}
