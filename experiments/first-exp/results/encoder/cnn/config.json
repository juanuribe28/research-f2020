{
    "dataset_reader": {
        "type": "tsv-reader"
    },
    "model": {
        "type": "simple_classifier",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 64
                }
            }
        },
        "encoder": {
            "type": "cnn",
            "embedding_dim": 64,
            "ngram_filter_sizes": [
                2,
                3,
                4
            ],
            "num_filters": 1
        }
    },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 100,
        "optimizer": "adam",
        "patience": 10
    },
    "data_loader": {
        "batch_size": 32,
        "shuffle": true
    }
}