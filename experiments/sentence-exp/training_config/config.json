{
   "data_loader": {
      "batch_size": 64,
      "shuffle": true
   },
   "dataset_reader": {
      "token_indexers": {
         "tokens": {
            "model_name": "bert-base-uncased",
            "type": "pretrained_transformer"
         }
      },
      "tokenizer": {
         "model_name": "bert-base-uncased",
         "type": "pretrained_transformer"
      },
      "type": "tsv-reader"
   },
   "model": {
      "embedder": {
         "token_embedders": {
            "tokens": {
               "model_name": "bert-base-uncased",
               "type": "pretrained_transformer"
            }
         }
      },
      "encoder": {
         "pretrained_model": "bert-base-uncased",
         "type": "bert_pooler"
      },
      "type": "simple_classifier"
   },
   "train_data_path": "./data/new_train_data.tsv",
   "trainer": {
      "cuda_device": -1,
      "num_epochs": 100,
      "optimizer": {
         "lr": 0.001,
         "type": "adamw"
      },
      "patience": 10
   },
   "validation_data_path": "./data/new_test_data.tsv"
}
