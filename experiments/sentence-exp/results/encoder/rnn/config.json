{
    "dataset_reader": {
        "type": "tsv-reader",
        "token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "tokenizer": {
            "type": "whitespace"
        }
    },
    "model": {
        "type": "simple_classifier",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 64
                }
            }
        },
        "encoder": {
            "type": "rnn",
            "hidden_size": 128,
            "input_size": 64,
            "num_layers": 2
        }
    },
    "train_data_path": "./data/new_train_data.tsv",
    "validation_data_path": "./data/new_test_data.tsv",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 100,
        "optimizer": {
            "type": "adamw",
            "lr": 0.001
        },
        "patience": 10
    },
    "data_loader": {
        "batch_size": 64,
        "shuffle": true
    }
}