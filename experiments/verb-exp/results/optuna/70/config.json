{
    "dataset_reader": {
        "type": "architecture.dataset_reader.TSVDatasetReader",
        "token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-uncased"
        }
    },
    "model": {
        "type": "simple_classifier",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 501
                }
            }
        },
        "encoder": {
            "type": "boe",
            "embedding_dim": 501
        }
    },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "trainer": {
        "cuda_device": 0,
        "num_epochs": 100,
        "optimizer": {
            "type": "adamw",
            "lr": 0.0022869926153533727
        },
        "patience": 10
    },
    "data_loader": {
        "batch_size": 64,
        "shuffle": true
    }
