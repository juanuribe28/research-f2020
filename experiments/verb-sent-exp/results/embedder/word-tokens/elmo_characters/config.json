{
    "dataset_reader": {
        "type": "tsv-reader",
        "token_indexers": {
            "tokens": {
                "type": "elmo_characters"
            }
        },
        "tokenizer": {
            "type": "whitespace"
        }
    },
    "model": {
        "type": "simple_classifier",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "elmo_token_embedder"
                }
            }
        },
        "encoder": {
            "type": "boe",
            "embedding_dim": 1024
        }
    },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "trainer": {
        "cuda_device": 0,
        "num_epochs": 100,
        "optimizer": "adam",
        "patience": 10
    },
    "data_loader": {
        "batch_size": 32,
        "shuffle": true
    }
}