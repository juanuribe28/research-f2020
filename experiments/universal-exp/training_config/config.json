{
   "data_loader": {
      "batch_size": 64,
      "shuffle": true
   },
   "dataset_reader": {
      "sentence_token_indexers": {
         "tokens": {
            "type": "single_id"
         }
      },
      "sentence_tokenizer": {
         "model_name": "bert-base-uncased",
         "type": "pretrained_transformer"
      },
      "type": "architecture.dataset_reader.TSVDatasetReader",
      "verb_token_indexers": {
         "tokens": {
            "type": "single_id"
         }
      },
      "verb_tokenizer": {
         "model_name": "bert-base-uncased",
         "type": "pretrained_transformer"
      }
   },
   "model": {
      "sentence_dropout": 0.80000000000000004,
      "sentence_embedder": {
         "token_embedders": {
            "tokens": {
               "embedding_dim": 128,
               "type": "embedding"
            }
         }
      },
      "sentence_encoder": {
         "embedding_dim": 128,
         "type": "boe"
      },
      "sentence_weight": 1,
