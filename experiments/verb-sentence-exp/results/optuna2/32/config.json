{
    "dataset_reader": {
        "type": "architecture.dataset_reader.TSVDatasetReader",
        "sentence_token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "sentence_tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-uncased"
        },
        "verb_token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "verb_tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-uncased"
        }
    },
    "model": {
        "type": "dual_simple_classifier",
        "sentence_dropout": 0.6704532139712673,
        "sentence_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 387
                }
            }
        },
        "sentence_encoder": {
            "type": "boe",
            "embedding_dim": 387
        },
        "verb_dropout": 0.21986491813142423,
        "verb_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 340
                }
            }
        },
        "verb_encoder": {
            "type": "boe",
            "embedding_dim": 340
        }
    },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "trainer": {
        "callbacks": [
            {
                "type": "optuna_pruner"
            }
        ],
        "cuda_device": 0,
        "num_epochs": 100,
        "optimizer": {
            "type": "adamw",
            "lr": 0.0006884517714442269
        },
        "patience": 10
    },
    "data_loader": {
        "batch_size": 64,
        "shuffle": true
    }
}