{
    "dataset_reader": {
        "type": "tsv-reader",
        "sentence_token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "sentence_tokenizer": {
            "type": "whitespace"
        },
        "verb_token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "verb_tokenizer": {
            "type": "character"
        }
    },
    "model": {
        "type": "dual_simple_classifier",
        "sentence_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 64
                }
            }
        },
        "sentence_encoder": {
            "type": "lstm",
            "hidden_size": 128,
            "input_size": 64,
            "num_layers": 3
        },
        "verb_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 64
                }
            }
        },
        "verb_encoder": {
            "type": "lstm",
            "hidden_size": 128,
            "input_size": 64,
            "num_layers": 3
        }
    },
    "train_data_path": "./data/train_data.tsv",
    "validation_data_path": "./data/test_data.tsv",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 100,
        "optimizer": {
            "type": "adamw",
            "lr": 0.001
        },
        "patience": 10
    },
    "data_loader": {
        "batch_size": 64,
        "shuffle": true
    }
}